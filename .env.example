# API Configuration
NEXT_PUBLIC_API_URL=https://api.fomovenue.com/v1
NEXT_PUBLIC_WS_URL=wss://api.fomovenue.com/v1/ws

# Authentication
NEXT_PUBLIC_AUTH_DOMAIN=auth.fomovenue.com
NEXT_PUBLIC_AUTH_CLIENT_ID=your_auth_client_id

# Maps Configuration
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token
NEXT_PUBLIC_GOOGLE_MAPS_KEY=your_google_maps_key

# Feature Flags
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# PWA Configuration
NEXT_PUBLIC_APP_NAME="FOMO Venue"
NEXT_PUBLIC_APP_DESCRIPTION="Real-time venue capacity tracking"
NEXT_PUBLIC_APP_THEME_COLOR="#070707"
NEXT_PUBLIC_APP_BACKGROUND_COLOR="#ffffff"

# Analytics & Monitoring
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_GA_TRACKING_ID=your_ga_tracking_id

# Cache Configuration
NEXT_PUBLIC_CACHE_MAX_AGE=300 # 5 minutes in seconds
NEXT_PUBLIC_STALE_WHILE_REVALIDATE=60 # 1 minute in seconds 